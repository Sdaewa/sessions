<!-- app/views/payments/new.html.erb -->
<h1>Purchase of therapy session <%= @booking.therapist_id %></h1>
<%= form_tag user_booking_payments_path(current_user,@booking) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@booking.amount) %></span>
    </label>
  </article>


  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Session"
    data-email="<%= current_user.email %>"
    data-description="Session <%= @booking.therapist_id %>"
    data-amount="<%= @booking.amount_cents %>"
    data-currency="<%= @booking.amount.currency %>"></script>
<% end %>

