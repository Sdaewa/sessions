<div class="container">
  <h1><%= @user.first_name %> <%= @user.last_name %></h1>
  <p><strong>Email:</strong> <%= @user.email %></p>
  <table class="table table-bordered">
    <tbody>
      <thead>
        <th>Expertise</th>
        <th>Language</th>
        <th>Prices</th>
        </thead>
        <tr>
          <td> <%= @user.expertise%></td>
          <td> <%= @user.languages%></td>
          <td><<p>Amount: <%= humanized_money_with_symbol(@user.price) %></p></td>
          </tr>
    </tbody>
  </table>
      <div class="align-buttons">
        <%= link_to users_path do %>
          <div class="btn btn-secondary">
            Back
          </div>
          <% end  %>
        <%= link_to new_user_booking_path(@user) do %>
          <div class="btn btn-primary">
            Book
          </div>
          <% end %>
        </div>
  <%= link_to "See reviews", user_reviews_path(@user) %>
    </div>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  overflow: hidden;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

