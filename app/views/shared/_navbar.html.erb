<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-lewagon-white">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to bookings_path(@booking) do %>
            <i class="far fa-calendar-check"></i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages" do %>
            <i class="far fa-comment-alt nav-link"></i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Notifications" do %>
            <i class="far fa-bell nav-link"></i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Links", "#", class: "nav-link" %>
        </li>
        <ul class="nav-item dropdown">
          <%= image_tag "head.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            <%= link_to "Settings", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </ul>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
